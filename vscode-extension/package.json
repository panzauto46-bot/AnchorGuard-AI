{
    "name": "anchorguard-ai",
    "displayName": "AnchorGuard AI",
    "description": "AI-Powered Security Auditor for Solana Anchor Programs — with transparent Chain-of-Thought reasoning",
    "version": "0.1.0",
    "publisher": "anchorguard",
    "license": "MIT",
    "icon": "resources/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/panzauto46-bot/AnchorGuard-AI"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Linters",
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "solana",
        "anchor",
        "rust",
        "security",
        "audit",
        "smart-contract",
        "web3",
        "blockchain",
        "ai",
        "vulnerability"
    ],
    "activationEvents": [
        "onLanguage:rust",
        "onCommand:anchorguard.auditFile",
        "onCommand:anchorguard.auditSelection",
        "onCommand:anchorguard.auditWorkspace"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "anchorguard.auditFile",
                "title": "AnchorGuard: Audit Current File",
                "icon": "$(shield)"
            },
            {
                "command": "anchorguard.auditSelection",
                "title": "AnchorGuard: Audit Selection",
                "icon": "$(search)"
            },
            {
                "command": "anchorguard.auditWorkspace",
                "title": "AnchorGuard: Audit All Anchor Programs",
                "icon": "$(folder)"
            },
            {
                "command": "anchorguard.clearDiagnostics",
                "title": "AnchorGuard: Clear Diagnostics",
                "icon": "$(clear-all)"
            },
            {
                "command": "anchorguard.openDashboard",
                "title": "AnchorGuard: Open Web Dashboard",
                "icon": "$(globe)"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == rust",
                    "command": "anchorguard.auditFile",
                    "group": "anchorguard@1"
                },
                {
                    "when": "resourceLangId == rust && editorHasSelection",
                    "command": "anchorguard.auditSelection",
                    "group": "anchorguard@2"
                }
            ],
            "editor/title": [
                {
                    "when": "resourceLangId == rust",
                    "command": "anchorguard.auditFile",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "AnchorGuard AI",
            "properties": {
                "anchorguard.groqApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API Key for Groq (Speed Layer — Llama 3 thinking trace)",
                    "scope": "application"
                },
                "anchorguard.geminiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API Key for Google Gemini (Brain Layer — deep audit)",
                    "scope": "application"
                },
                "anchorguard.autoAuditOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically run audit when saving Rust files"
                },
                "anchorguard.severityFilter": {
                    "type": "string",
                    "enum": [
                        "all",
                        "critical",
                        "high",
                        "medium"
                    ],
                    "default": "all",
                    "description": "Minimum severity level to display diagnostics"
                },
                "anchorguard.showThinkingProcess": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show AI thinking process in output channel"
                }
            }
        },
        "keybindings": [
            {
                "command": "anchorguard.auditFile",
                "key": "ctrl+shift+a",
                "mac": "cmd+shift+a",
                "when": "resourceLangId == rust"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.3.0",
        "@vscode/vsce": "^2.22.0"
    },
    "dependencies": {
        "groq-sdk": "^0.5.0",
        "@google/generative-ai": "^0.21.0"
    }
}